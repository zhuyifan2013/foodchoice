<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.mi.FoodChoice"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/header_padding"
        android:background="@color/primary_color">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="@style/FoodTextAppearance.Title"
            android:text="@string/app_name"
            android:visibility="gone"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/setting"
            android:layout_width="@dimen/more_btn_length"
            android:layout_height="@dimen/more_btn_length"
            android:layout_gravity="center_vertical"
            android:background="@drawable/more_info"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/shop_details_height"
        android:orientation="vertical"
        android:background="@color/primary_color">

        <com.mi.FoodChoice.ui.CircleButton
            android:id="@+id/first_click"
            android:layout_width="@dimen/first_button_length"
            android:layout_height="@dimen/first_button_length"
            android:layout_gravity="center"
            app:circle_icon="@drawable/icecream"
            app:circle_color="@color/accent_color"
            android:textColor="#ffffff"
            android:textAppearance="@style/FoodTextAppearance.Large"/>

        <com.mi.FoodChoice.ui.ProgressWheel
            android:id="@+id/location_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/progressbar_margin_top"
            app:matProg_barColor="@color/white"/>

        <LinearLayout
            android:id="@+id/no_shop"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sad"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/no_shop_text_margin_top"
                android:text="@string/no_shop1"
                android:textAppearance="@style/FoodTextAppearance.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/no_shop_text_margin_top"
                android:text="@string/no_shop2"
                android:textAppearance="@style/FoodTextAppearance.Medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/no_shop_text_margin_top"
                android:text="@string/no_shop3"
                android:textAppearance="@style/FoodTextAppearance.Medium"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/shop_name_margin_top"
                android:layout_marginLeft="@dimen/shop_name_margin_left"
                android:layout_marginRight="@dimen/shop_name_margin_left"
                android:singleLine="true"
                android:clickable="true"
                android:textAppearance="@style/FoodTextAppearance.Large"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_price_margin_top"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/shop_details_image_length"
                    android:layout_height="@dimen/shop_details_image_length"
                    android:layout_marginRight="@dimen/shop_details_image_margin_right"
                    android:src="@drawable/card"/>
                <TextView
                    android:id="@+id/shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/FoodTextAppearance.Medium"
                    android:text="@string/shop_avg_price"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/shop_distance_margin_top"
                android:gravity="center">
                <ImageView
                    android:layout_width="@dimen/shop_details_image_length"
                    android:layout_height="@dimen/shop_details_image_length"
                    android:layout_marginRight="@dimen/shop_details_image_margin_right"
                    android:src="@drawable/distance"/>
                <TextView
                    android:id="@+id/shop_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="@style/FoodTextAppearance.Medium"
                    android:text="@string/shop_distance"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/function_button_margin_top"
                android:gravity="center"
                android:orientation="horizontal">
                <com.mi.FoodChoice.ui.CircleButton
                    android:id="@+id/location"
                    android:layout_width="@dimen/button_length"
                    android:layout_height="@dimen/button_length"
                    app:circle_color="@color/accent_color"
                    app:circle_icon="@drawable/location"/>
                <com.mi.FoodChoice.ui.CircleButton
                    android:id="@+id/make_choice"
                    android:layout_width="@dimen/button_length"
                    android:layout_height="@dimen/button_length"
                    app:circle_color="@color/accent_color"
                    app:circle_icon="@drawable/shuffle"/>
                <com.mi.FoodChoice.ui.CircleButton
                    android:id="@+id/trash"
                    android:layout_width="@dimen/button_length"
                    android:layout_height="@dimen/button_length"
                    app:circle_color="@color/accent_color"
                    app:circle_icon="@drawable/trash"/>
                <com.mi.FoodChoice.ui.CircleButton
                    android:id="@+id/comment"
                    android:layout_width="@dimen/button_length"
                    android:layout_height="@dimen/button_length"
                    app:circle_color="@color/accent_color"
                    app:circle_icon="@drawable/comment"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/latter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/latter_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/wtf"/>

        <LinearLayout
            android:id="@+id/deals_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="@dimen/deal_item_padding"
            android:gravity="center_vertical"
            android:clickable="false"
            android:background="@drawable/list_item_bg">
            <ImageView
                android:layout_width="@dimen/deal_image_length"
                android:layout_height="@dimen/deal_image_length"
                android:layout_marginRight="@dimen/deal_image_margin_right"
                android:clickable="false"
                android:src="@drawable/coffee"/>
            <TextView
                android:id="@+id/deals_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textAppearance="@style/FoodTextAppearance.ListItem.Title"
                android:text="@string/shop_deals_item_title"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dianping_logo_height"
            android:src="@drawable/dianping"
            android:layout_marginBottom="@dimen/text_margin_bottom"/>

    </LinearLayout>

</LinearLayout>
