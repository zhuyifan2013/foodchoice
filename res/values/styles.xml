<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActionBarTitle" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/FoodTextAppearance.ActionBarTitle</item>
    </style>

    <style name="FoodTextAppearance" parent="android:TextAppearance.Holo">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ActionbarTitle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="FoodTextAppearance.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="FoodTextAppearance.Large">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="FoodTextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FoodTextAppearance.Secondary">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FoodTextAppearance.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="FoodTextAppearance.ActionBarTitle">
    </style>

    <style name="FoodTextAppearance.Button">
        <item name="android:textColor">@color/button_light</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="FoodTextAppearance.Button.Small">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FoodTextAppearance.ListItem">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FoodTextAppearance.ListItem.Large">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="FoodTextAppearance.ListItem.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FoodTextAppearance.ListItem.Special">
        <item name="android:textColor">@color/dark_primary_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FoodTextAppearance.ListItem.Secondary">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
